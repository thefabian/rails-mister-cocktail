<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Name</th>
            <td><%= @cocktail.name %></td>
          </tr>
        </tbody>
      </table>

      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="row">Dose</th>
            <th scope="row">Ingredient</th>
          </tr>
        </thead>
        <tbody>
         <% @cocktail.doses.each do |dose| %>
         <tr>
          <td><%= dose.description %></td>
          <td><%= dose.ingredient.name %><%= link_to "- <i class='far fa-trash-alt'></i>".html_safe, dose_path(dose), method: :delete, data: { confirm: "Delete dose?" } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit class: 'btn btn-primary' %>
    <% end %>

    <%= link_to "See all cocktails", cocktails_path %>
  </div>
</div>
</div>


